<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#00000000" >

<Button
    android:id="@+id/dispPassBtn"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:background="#00000000"
    android:text="@string/dispPassBtnTxt"
    android:textColor="#5E5E5E"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/dispRankingBtn"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/dispRankingBtn"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_marginEnd="1dp"
    android:background="#00000000"
    android:text="@string/dispRankingBtn"
    android:textColor="#2196F3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/dispPassBtn"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<View
    android:id="@+id/tabBar"
    android:layout_width="0dp"
    android:layout_height="2dp"
    android:background="#2196F3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dispPassBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>